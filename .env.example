# Teams Webhook Configuration Example
# Copy this file to .env and customize the values

# Required: Secret token from Teams Outgoing Webhook configuration
# This is used to verify webhook requests are authentic
TEAMS_WEBHOOK_SECRET=your-secret-token-here

# Optional: Server configuration
# Host to bind the webhook server (0.0.0.0 for all interfaces)
WEBHOOK_HOST=0.0.0.0

# Port for the webhook server
WEBHOOK_PORT=5000

# Debug mode (True/False) - set to False in production
WEBHOOK_DEBUG=False
